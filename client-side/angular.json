{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "client-side": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "root": "",
            "sourceRoot": "src",
            "prefix": "addon",
            "architect": {
                "build": {
                    "builder": "@angular-builders/custom-webpack:browser",
                    "options": {
                        "outputPath": "../publish",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "tsconfig.json",
                        "customWebpackConfig": {
                            "path": "webpack.config.js"
                        },
                        "stylePreprocessorOptions": {
                            "includePaths": [
                                "node_modules/@pepperi-addons",
                                "node_modules"
                            ]
                        },
                        "assets": [
                            "src/favicon.ico",
                            "src/assets",
                            {
                                "glob": "**/*",
                                "input": "node_modules/@pepperi-addons/ngx-lib/src/assets",
                                "output": "./assets/ngx-lib"
                            },
                            {
                                "glob": "**/*",
                                "input": "node_modules/@pepperi-addons/ngx-composite-lib/src/assets",
                                "output": "./assets/ngx-composite-lib"
                            }
                        ],
                        "styles": [
                            "src/styles.scss"
                        ],
                        "scripts": []
                  },
                  "configurations": {
                        "development": {
                            "optimization": false,
                            "sourceMap": true,
                            "namedChunks": false,
                            "aot": true,
                            "extractLicenses": false,
                            "vendorChunk": false,
                            "buildOptimizer": false
                        },
                        "production": {
                            "optimization": true,
                            "sourceMap": false,
                            "namedChunks": true,
                            "extractLicenses": true,
                            "vendorChunk": false,
                            "buildOptimizer": true,
                            "outputHashing": "all",
                            "fileReplacements": [{
                                "replace": "src/environments/environment.ts",
                                "with": "src/environments/environment.prod.ts"
                            }]
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-builders/custom-webpack:dev-server",
                    "options": {
                        "browserTarget": "client-side:build"
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "client-side:build:production"
                        },
                        "development": {
                            "browserTarget": "client-side:build:development",
                            "port": 4400
                        }
                    },
                    "defaultConfiguration": "development"
                }
            }
        }
    },
    "cli": {
        "analytics": false
    }
}
